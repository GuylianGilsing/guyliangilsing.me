<div class="flex flex-col overflow-hidden rounded-2xl shadow-md bg-brand-primary transition-transform hover:scale-105" data-block="project-card">
    <div class="py-28 px-8 flex flex-col items-center justify-center text-white text-3xl text-center">
        <div>{{ project.title }}</div>
    </div>
    <div class="px-6 py-4 flex flex-col flex-grow bg-white">
        {% if project.tags|length > 0 %}
            <div class="mb-3 flex flex-row flex-wrap gap-4">
                {% for tag in project.tags %}
                    <a href="{{ abs_url('/projects') }}?tags[]={{ tag|lower }}" class="py-1 px-3 inline-block text-sm rounded-2xl bg-gray-300 transition-colors hover:bg-gray-400">{{ tag }}</a>
                {% endfor %}
            </div>
        {% endif %}
        <div>{{ project.short_description }}</div>
        <div class="mt-auto pt-3">
            <a href="{{ project.read_more_url }}" class="font-semibold underline transition-opacity hover:opacity-60">{{ project.read_more_name }}</a>
        </div>
    </div>
</div>
