<section data-block="projects-short-overview">
    <div class="py-6 md:py-10 bg-gray-100">
        <div class="container mx-auto px-4 md:p-0">
            <div class="mb-8 text-center">
                <div class="text-2xl mb-2 font-semibold">{{ projects_overview_title }}</div>
            </div> 
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
                {% for project in projects_overview_projects %}
                    {% include "/blocks/projects/project-card.twig" %}
                {% endfor %}
            </div>
            <div class="mt-8 text-center">
                <a href="{{ abs_url(projects_overview_button.url) }}" class="px-4 py-2 inline-block text-md border-2 border-brand-primary transition-colors hover:text-white hover:bg-brand-primary">{{ projects_overview_button.name }}</a>
            </div>
        </div>
    </div>
</section>
